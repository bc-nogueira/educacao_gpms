<div class="container">
  <h1>Busca de Cursos</h1>

  <%= render 'courses/search_form' %>

  <% if @courses.any? %>
    <div class="w-75 mt-3 mx-auto alert alert-success">
      Foram encontrados <%= @courses.size %> cursos!
    </div>

    <%= render partial: 'courses/courses', locals: { courses: @courses } %>
  <% else %>
    <div class="w-75 mt-3 mx-auto alert alert-warning">
      NÃ£o foi encontrado nenhum curso com o termo <span class="font-weight-bold"><%= params[:search] %></span>!
    </div>
  <% end %>
</div>